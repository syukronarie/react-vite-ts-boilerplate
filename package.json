{
	"name": "react-vite-ts-boilerplate",
	"private": false,
	"version": "0.0.0",
	"main": "src/main.tsx",
	"repository": "https://github.com/syukronarie/react-vite-ts-boilerplate.git",
	"author": "syukronarie",
	"license": "MIT",
	"scripts": {
		"dev": "vite",
		"build": "tsc && vite build",
		"preview": "vite preview"
	},
	"husky": {
		"hooks": {
			"pre-commit": "lint-staged"
		}
	},
	"lint-staged": {
		"src/**/*.{ts,tsx}": [
			"eslint --cache --fix",
			"git add"
		],
		"src/**/*.{js,jsx}": [
			"eslint --cache --fix",
			"git add"
		]
	},
	"dependencies": {
		"react": "^18.0.0",
		"react-dom": "^18.0.0"
	},
	"devDependencies": {
		"@types/node": "^17.0.31",
		"@types/react": "^18.0.0",
		"@types/react-dom": "^18.0.0",
		"@typescript-eslint/eslint-plugin": "^5.22.0",
		"@typescript-eslint/parser": "^5.22.0",
		"@vitejs/plugin-react": "^1.3.0",
		"dotenv": "^16.0.0",
		"eslint": "^8.14.0",
		"eslint-config-alloy": "^4.5.1",
		"eslint-plugin-react": "^7.29.4",
		"husky": "^7.0.4",
		"lint-staged": "^12.4.1",
		"prettier": "^2.6.2",
		"typescript": "^4.6.3",
		"vite": "^2.9.7"
	}
}
